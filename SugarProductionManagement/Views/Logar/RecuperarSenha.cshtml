@{
    Layout = "_LayoutNoConnection";
}
@model RecuperarSenha
<section id="InformationAndLogin">
    @if (TempData["Sucesso"] != null) {
        <div class="alert alert-success" role="alert">
            @TempData["Sucesso"]
            <button type="button" class="btn btn-danger btn-sm close-alert sucesso" aria-label="Close"> <i class="fa fa fa-xmark"></i> </button>
        </div>
    }
    @if (TempData["Error"] != null) {
        <div class="alert alert-danger" role="alert" style="margin-bottom: 3px;">
            @TempData["Error"]
            <button type="button" class="btn btn-danger btn-sm close-alert erro" aria-label="Close"> <i class="fa fa fa-xmark"></i> </button>
        </div>
    }
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-center h-100">
                    <div class="card">
                        <div class="card-header">
                            <h3>Recuperar senha</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="RecuperarSenha" asp-controller="Logar" method="post">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Informe seu CPF." asp-for="Cpf" maxlength="11">
                                    <div class="error-message">
                                        <small>
                                            @Html.ValidationMessageFor(x => x.Cpf)
                                        </small>
                                    </div>
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="email" class="form-control" placeholder="Informe seu e-mail." asp-for="Email" id="email">
                                    <div class="error-message">
                                        <small class="error-message">
                                            @Html.ValidationMessageFor(x => x.Email)
                                        </small>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Recuperar" class="btn float-right login_btn">
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

