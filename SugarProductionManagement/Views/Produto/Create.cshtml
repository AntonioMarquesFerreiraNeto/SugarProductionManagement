@model Produto
<link rel="stylesheet" href="~/css/funcionario.css" />
<link rel="stylesheet" href="~/css/formulario.css" />

<div class="container-produto">
    <div class="container-title">
        <h1 class="title"><i class="fas fa-plus"></i> Cadastrar Produto</h1>
    </div>
    <form class="flex-container" asp-action="Create" asp-controller="Produto">
        <div class="input-group form-group col-md-6">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-tag"></i></span>
            </div>
            <input type="text" class="form-control" asp-for="Nome" placeholder="Informe o nome do produto.">
            <div class="error-message">
                <small>
                    @Html.ValidationMessageFor(x => x.Nome)
                </small>
            </div>
        </div>
        <div class="input-group form-group col-md-6">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
            </div>
            <input type="text" class="form-control" asp-for="Preco" placeholder="Informe o preço do produto." onkeyup="mascaraMoeda(this, event)">
            <div class="error-message">
                <small>
                    @Html.ValidationMessageFor(x => x.Preco)
                </small>
            </div>
        </div>
        <div class="input-group form-group col-md-6">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
            </div>
            <input type="text" class="form-control" asp-for="Descricao" placeholder="Informe a descrição do produto.">
            <div class="error-message">
                <small>
                    @Html.ValidationMessageFor(x => x.Descricao)
                </small>
            </div>
        </div>
        <div class="form-group container-botoes col-md-12">
            <a class="btn voltar-btn" asp-action="Index" asp-controller="Produto">Voltar</a>
            <input type="submit" value="Cadastrar" class="btn submit_btn">
        </div>
    </form>
</div>
<script src="~/js/mascaraMoney.js"></script>
