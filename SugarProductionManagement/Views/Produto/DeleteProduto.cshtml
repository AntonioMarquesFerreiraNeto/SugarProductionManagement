@model Produto

<link rel="stylesheet" href="~/css/funcionario.css" />
<link rel="stylesheet" href="~/css/inativar.css" />

<div class="container-produto">
    <div class="container-title">
        <h1 class="title"><i class="fas fa-trash"></i> Inativar Produto</h1>
    </div>
    <div class="details-container">
        <div class="input-group form-group col-md-6">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-tag"></i></span>
            </div>
            <input type="text" class="form-control" value="@Model.Nome" readonly>
        </div>
        <div class="input-group form-group col-md-6">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
            </div>
            <input type="text" class="form-control" value="@Model.Preco" readonly>
        </div>
    </div>
    <div class="form-group container-botoes col-md-12">
        <a class="btn voltar-btn" asp-action="Index" asp-controller="Produto">Voltar</a>
        <a class="btn inativar-btn" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" asp-controller="Produto">Inativar</a>
    </div>
</div>